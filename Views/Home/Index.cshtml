<h1>@ViewData["Message"]</h1><br>
<strong><h2><marquee>Separa tu Vacante para el proximo año!!!</marquee></h2></strong>
<div class="row">
     <div class="col-lg-4 mx-auto">
        <div  class="card" style="border-radius: 20px; padding: 1rem 1rem; height:100%;">
          <div class="card-body">
            <h4>Datos del Menor</h4><hr>
            <form  class="row g-3">
              <div class="col-md-4">
                <label class="control-label">DNI</label>
                <input class="form-control" />
                <span  class="text-danger"></span>
                </div>
                <div class="col-md-6">
                  <label class="control-label">Nombres</label>
                <input  class="form-control" />
                <span  class="text-danger"></span>
                </div>
                <div class="col-md-6">
                <label class="control-label">Apellido Paterno</label>
                <input class="form-control" />
                <span  class="text-danger"></span>
                </div>
                <div class="col-md-6">
                  <label class="control-label">Apellido Materno</label>
                <input class="form-control" />
                <span  class="text-danger"></span>
                </div>
                <div class="col-md-5">
                  <label class="control-label">Fecha Nacimiento</label>
                <input type="date" class="form-control" />
                <span  class="text-danger"></span>
                </div>
                <div class="col-md-2">
                  <label class="control-label">Grado</label>
                <input type="number" class="form-control" />
                <span  class="text-danger"></span>
                </div>
                <div class="col-md-5">
                  <label class="control-label">Voucher</label>
                <input  type="file" class="form-control" />
                <span class="text-danger"></span>
                </div>
                <div class="col-md-6">
                  <label class="control-label">Apoderado</label>
                 <input  class="form-control" />
                 <span  class="text-danger"></span>
                 </div>
                 <div class="col-md-4">
                  <label class="control-label">Celular</label>
                 <input class="form-control" />
                 <span  class="text-danger"></span>
                </div>
                <div class="col-md-8">
                  <input type="submit" value="Separar Vacante" class="btn btn-primary" />
                </div>
                </form>
          </div>
        </div>
      </div> 
    <div class="col-lg-8 mx-auto">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner" style="height:100%">
            <div class="carousel-item active">
            <img src="/Images/bienvenida.jpg" class="d-block w-100" alt="" style="height:500px;border-radius:20px;">
            </div>
            <div class="carousel-item">
            <img src="/Images/welcome.jpg" class="d-block w-100" alt="" style="height:500px;border-radius:20px;">
            </div>
            <div class="carousel-item">
            <img src="/Images/octubre.jpg" class="d-block w-100" alt="" style="height:500px;border-radius:20px;">
            </div>
          </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Atrás</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
        </button>
        </div>
    </div>
</div>
